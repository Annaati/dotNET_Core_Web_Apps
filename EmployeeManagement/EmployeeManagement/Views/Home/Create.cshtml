@model Employee
@inject IEmployeeRepository _epmRepo

@{
    ViewBag.Title = "Create Employee";
}

<form asp-controller="home" asp-action="create" method="post" class="m-3 p-2">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@ViewBag.Title</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Gender" class="col-sm-2 col-form-label"></label>
                    <select asp-for="Gender" class="form-control">
                        <option value="">Select Gender...</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                    <input asp-for="Email" class="form-control" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Dep" class="col-sm-2 col-form-label"></label>
                    <select asp-for="Dep" class="form-control" asp-items="Html.GetEnumSelectList<DeptsEnum>()">
                        <option value="">Select Department...</option>
                    </select>
                    <span asp-validation-for="Dep" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </div>
        </div>
        <br /><br />
        <div class="form-control-plaintext text-center">Total Employee: @_epmRepo.GetAllEmployees().Count()</div>
    </div>
</form>