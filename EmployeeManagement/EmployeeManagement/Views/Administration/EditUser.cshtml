@model EditUserViewModel

@{
    ViewBag.Title = "Edit User";
}

<div class="card">
    <h2 class="card-title">Edit User</h2>

    <div class="card-body">
        <form method="post" class="mt-2">
            <div class="row m-lg-4">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group col-5">
                    <label asp-for="Id" class="col-sm-2 col-form-label"></label>
                    <input asp-for="Id" disabled class="form-control" />
                </div>
                <div class="form-group col-md-5 m-lg-2">
                    <label asp-for="Gender" class="col-sm-2 col-form-label"></label>
                    <input asp-for="Gender" disabled class="form-control" />
                </div>
                <div class="form-group col-md-5">
                    <label asp-for="FullName"></label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group col-md-6 m-lg-1">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <br /><br />
                <div class="form-group col-md-8">
                    <label asp-for="Address"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex justify-content-end mt-2">
                <button type="submit" class="btn btn-primary" style="width:auto;">Update</button>&nbsp &nbsp &nbsp
                <a asp-controller="Administration" asp-action="ListUsers" class="btn btn-primary" style="width:auto;">Cancel</a>
            </div>
        </form>
    </div>
</div>

<div class="card mt-4">
    <div class="card-header mt-2"><h2 class="card-title">User Roles</h2></div>
    <div class="card-body">
        @if(Model.Roles.Any())
        {
            foreach(var role in Model.Roles)
            {
                <h3 class="card-text">@role</h3>
            }
        }
        else
        {
                <h2>None at the moment</h2>
        }
    </div>
    <div class="card-footer">
        <div class="d-flex justify-content-end mt-2">
            <a asp-controller="Administration" asp-action="ListRoles" class="btn btn-primary" style="width:auto;">Manage Roles</a>
        </div>
    </div>
</div>

<div class="card mt-4">
    <div class="card-header"><h2 class="card-title">User Claims</h2></div>
    <div class="card-body">
        @if (Model.Roles.Any())
        {
            foreach (var role in Model.Claims)
            {
                <h3 class="card-text">@role</h3>
            }
        }
        else
        {
            <h2>None at the moment</h2>
        }
    </div>
    <div class="card-footer">
        <div class="d-flex justify-content-end mt-2">
            <a asp-controller="Administration" asp-action="UserClaims" class="btn btn-primary" style="width:auto;">Manage Claims</a>
        </div>
    </div>
</div>
