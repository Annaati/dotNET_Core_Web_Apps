@model EditRoleViewModel

@{ 
    ViewBag.Title = "Edit Role";
}

<div class="card">
    <div class="card-header">
        <h2 class="card-title">Edit Role</h2>

        <form method="post" class="mt-3">
            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-10">
                    <div class="form-group row col-md-8">
                        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
                        <input asp-for="Id" disabled class="form-control" />
                    </div>
                    <div class="form-group row col-md-8">
                        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
                        <input asp-for="RoleName" class="form-control" />
                        <span asp-validation-for="RoleName"></span>
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
                <div class="card-footer mt-2">
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary" style="width:auto">Update Role</button>&nbsp &nbsp &nbsp
                        <a asp-action="ListRoles" class="btn btn-primary" style="width:auto">Cancel</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="card-header">
        <h2 class="card-title">User in this Role</h2>
    </div>
    <div class="card-body">
        @if (Model.Users.Any())
        {
            foreach (var user in Model.Users)
            {
                <h4 class="card-text">@user</h4>
            }
        }
        else
        {
        <h4 class="card-text">None at the Moment</h4>
        }
    </div>
    <div class="card-footer mt-2">
    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-primary" style="width:auto">Add Users</button>&nbsp &nbsp &nbsp
        <a asp-action="ListRoles" class="btn btn-primary" style="width:auto">Remove Users</a>
    </div>
</div>
</div>